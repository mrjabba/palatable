<h1>Bookmark Repository</h1>
<div class="actions">
  <nav class="round">
    <ul>
      <li><%= link_to "New Bookmark", "bookmarks/new", :class => "action_button round" %></li>
    </ul>
  </nav>
</div>

<%= form_tag bookmarks_path, :method => 'get', :remote => true, :id => "bookmarks_search" do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  </p>

  <div id="bookmarks">
    <%= render 'bookmark' %>
  </div>

<% end %>


